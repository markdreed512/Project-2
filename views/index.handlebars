            <div class="form-group mx-sm-3 mb-2">
              <input type="password" class="form-control" id="inputPassword2" placeholder="Enter Todo">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Add Todo</button>
          </form>
        </div>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="card col-sm-9">
        <div class="card-body">
          <h1 class="card-title">News</h1>
          <hr>
          <div id="news" style="font-size: 20px;">Grab from Api</div>
        </div>
      </div>
    </div>
