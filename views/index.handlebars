  <div class="container col-sm-12 mt-5 text-center">
    <div class="row justify-content-center">
      <div class="card col-lg-3 mr-1">

        <div class="card-body">
          <h1 class="card-title">Weather</h1>
          <hr>
          <div id="demo" style="font-size: 20px;"></div>
        </div>
      </div>
      <div class="card col-lg-3 mr-1">

        <div class="card-body">
          <h1 class="card-title">Commute</h1>
          <hr>
          <div id="commute" style="font-size: 20px;">grab from api</div>
        </div>
      </div>
      <div class="card col-lg-3 mr-1">

        <div class="card-body">
